<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.rrc.wilson.developerreference.SettingsActivity">
    <Button android:id="@+id/selectDefaultLang"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/selectDefaultLang"/>
    <Button android:id="@+id/forceRefresh"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/forceRefresh"/>
</LinearLayout>
